# PostgreSQL数据库配置
# 用于替换现有的MySQL配置，用于AI分析数据源

# PostgreSQL连接参数
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=your_password_here
POSTGRESQL_DATABASE=saihu_erp_sync
POSTGRESQL_SSLMODE=prefer

# 连接池配置
POSTGRESQL_POOL_SIZE=20
POSTGRESQL_MAX_OVERFLOW=30
POSTGRESQL_POOL_TIMEOUT=30
POSTGRESQL_POOL_PRE_PING=true
POSTGRESQL_POOL_RECYCLE=3600

# 迁移配置
MIGRATION_MYSQL_HOST=localhost
MIGRATION_MYSQL_PORT=3306
MIGRATION_MYSQL_USER=root
MIGRATION_MYSQL_PASSWORD=your_mysql_password
MIGRATION_MYSQL_DATABASE=amazon_analyst

# 迁移选项
MIGRATION_BATCH_SIZE=1000
MIGRATION_VERIFY_DATA=true
MIGRATION_DRY_RUN=false
MIGRATION_BACKUP_FIRST=true
MIGRATION_LOG_LEVEL=info

# AI分析配置
AI_ANALYSIS_DATA_SOURCE=postgresql
AI_ANALYSIS_DB_TIMEOUT=30000
AI_ANALYSIS_DB_MAX_RETRIES=3